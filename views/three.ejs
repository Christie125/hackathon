<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Three</title>
    <link rel="stylesheet" href="/css/fish.css">
</head>
<body>
        
    <script>
    setTimeout(() => {
        document.body.innerHTML += '<a href="/code">Next</a>';
    }, 10000);
    </script>
    <p id="typewriter" class="type"></p>
    <style>
        p {
            font-family: "Sue Ellen Francisco", cursive;
            background: white;
            padding: 1%;
            font-size: 1em;
            color: black;
            width: 10%;
        }

        .resize-img {
            width: 200px;
            height: auto;
            transition: width 1s ease-in-out;
        }

        @keyframes resize-animation {
            0% {
                width: 200px;
            }
            100% {
                width: 300px;
            }
        }

        .image {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const text = "You continue along the path and find a lake with a fish.";
            let i = 0;
            function typeWriter() {
                if (i < text.length) {
                    document.getElementById("typewriter").innerHTML += text.charAt(i);
                    i++;
                    setTimeout(typeWriter, 50);
                }
            }
            typeWriter();
        });
    </script>
    <div class="image" onclick="burst()"><img src="/images/fish.png" alt="fish" class="resize-img"></div>
    <script src="fish.js"></script>
</body>
</html>